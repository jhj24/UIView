<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--频数-->
    <attr name="frequencyColor" format="color" />
    <attr name="frequencyMarginBottom" format="dimension" />
    <attr name="frequencySize" format="dimension" />
    <!--变量分组-->
    <attr name="variableGroupColor" format="color" />
    <attr name="variableGroupSize" format="dimension" />
    <attr name="variableGroupMarginTop" format="dimension" />
    <!--坐标轴-->
    <attr name="axisLineColor" format="color" />
    <attr name="axisLineWidth" format="integer" />
    <!--折线-->
    <attr name="indicatorLineColor" format="integer" />
    <attr name="indicatorLineLength" format="integer" />
    <attr name="indicatorLineWidth" format="integer" />
    <!--说明-->
    <attr name="indicatorInfoColor" format="integer" />
    <attr name="indicatorInfoSize" format="float" />

    <!--直方图-->
    <declare-styleable name="HistogramView">
        <!--直方图-->
        <attr name="histogramColor" format="color" />
        <attr name="histogramWidth" format="dimension" />
        <attr name="histogramDistance" format="dimension" />
        <!--频数-->
        <attr name="frequencyColor" />
        <attr name="frequencyMarginBottom" />
        <attr name="frequencySize" />
        <!--变量分组-->
        <attr name="variableGroupColor" />
        <attr name="variableGroupSize" />
        <attr name="variableGroupMarginTop" />
        <!--坐标轴-->
        <attr name="axisLineColor" />
        <attr name="axisLineWidth" />

    </declare-styleable>

    <!--折线图-->
    <declare-styleable name="LineChartView">
        <!--折点-->
        <attr name="isPointRound" format="boolean" />
        <attr name="pointColor" format="color" />
        <attr name="pointSize" format="float" />
        <!--折线-->
        <attr name="lineChartColor" format="color" />
        <attr name="lineChartWidth" format="dimension" />
        <attr name="lineChartDistance" format="integer" />
        <!--频数-->
        <attr name="frequencyColor" />
        <attr name="frequencyMarginBottom" />
        <attr name="frequencySize" />
        <!--变量分组-->
        <attr name="variableGroupColor" />
        <attr name="variableGroupSize" />
        <attr name="variableGroupMarginTop" />
        <!--坐标轴-->
        <attr name="axisLineColor" />
        <attr name="axisLineWidth" />
    </declare-styleable>

    <!--饼状图-->
    <declare-styleable name="PieChartView">
        <!--折线-->
        <attr name="indicatorLineColor" />
        <attr name="indicatorLineLength" />
        <attr name="indicatorLineWidth" />
        <!--说明-->
        <attr name="indicatorInfoColor" />
        <attr name="indicatorInfoSize" />
    </declare-styleable>

    <!--环状图-->
    <declare-styleable name="RingChartView">
        <!--圆环宽度-->
        <attr name="ringWidth" format="dimension" />
        <!--折线-->
        <attr name="indicatorLineColor" />
        <attr name="indicatorLineLength" />
        <attr name="indicatorLineWidth" />
        <!--说明-->
        <attr name="indicatorInfoColor" />
        <attr name="indicatorInfoSize" />
    </declare-styleable>

    <!--圆形图片-->
    <declare-styleable name="CircleImageView">
        <attr name="isNeedImageBorder" format="boolean" />
        <attr name="imageBorderColor" format="color" />
        <attr name="imageBorderWidth" format="integer" />
    </declare-styleable>

    <declare-styleable name="CoverImageLayout">
        <attr name="coverSize" format="dimension" />
    </declare-styleable>

    <!--条状图-->
    <declare-styleable name="BarChartView">
        <attr name="AxisLineColor"  />
        <attr name="AxisLineWidth"  />
        <attr name="excellentColor" format="color" />
        <attr name="qualifiedColor" format="color" />
        <attr name="yAxisPartNum" format="integer" />
        <attr name="yAxisPartColor" format="color" />
        <attr name="yAxisPartWidth" format="float" />
        <attr name="textColor" />
        <attr name="textSize" format="float" />
        <attr name="textWidth" format="float" />
        <attr name="xRectDistance" format="float" />
        <attr name="roundRectHeight" format="float" />
        <attr name="roundRectWidth" format="float" />
        <attr name="roundRectRadio" format="float" />
        <attr name="titleTextColor" format="color" />
        <attr name="titleTextSize" format="float" />
        <attr name="titleTextWidth" format="float" />
    </declare-styleable>


    <declare-styleable name="WaveView">
        <attr name="wavePercentTextColor" format="color" />
        <attr name="wavePercentTextSize" format="float" />
        <attr name="wavePercentTextWidth" format="float" />
        <attr name="waveSinColor" format="color" />
        <attr name="waveTitleTextSize" format="float" />
        <attr name="waveTitleTextWidth" format="float" />

    </declare-styleable>
</resources>